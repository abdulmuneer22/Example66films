<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/translucent_white_a50"
                android:endColor="@color/translucent_white_a50"
                android:startColor="@color/translucent_white_a50"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#ffde31"
                    android:endColor="#ffde31"
                    android:startColor="#ff4abc"/>
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:centerColor="#ffde31"
                android:endColor="#ffde31"
                android:startColor="#ff4abc"/>
            <corners android:radius="8dp"/>
        </shape>
    </clip>
</item>
</layer-list>

