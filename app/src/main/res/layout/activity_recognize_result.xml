<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_location_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_background"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_above="@+id/tv_wait"
            style="@style/Widget.ProgressBar.Horizontal.Down"
            android:layout_width="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/tv_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="96dp"
            android:gravity="center"
            android:text="@string/wait"
            android:textSize="14sp"
            android:textColor="@color/normal_grey"/>

    </RelativeLayout>

</RelativeLayout>
