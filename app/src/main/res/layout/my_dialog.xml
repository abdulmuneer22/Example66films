<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_round_dialog"
        android:minHeight="128dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:src="@mipmap/bg_down" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="马上下载，精彩内容即将呈现~"
            android:textColor="#1e1e1e" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/v_line"
            android:background="@drawable/shape_round_dialog_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black" />

        <View
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/v_line"
            android:background="@drawable/shape_round_dialog_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>